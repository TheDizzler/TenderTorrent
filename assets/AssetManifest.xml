	<gfx dir="gfx/">

		<!-- Bullets and other shooty things -->
		<spritesheet file="bullet sheet.dds">
			<animation name="Enemy Bullet A" timePerFrame=".1">
				<sprite x="0"  y="0"  width="14" height="14" />
				<sprite x="15" y="0"  width="14" height="14" />
				<sprite x="30" y="0"  width="14" height="14" />
				<sprite x="45" y="0"  width="14" height="14" />
				<sprite x="60"  y="0" width="14" height="14" />
				<sprite x="75" y="0" width="14" height="14" />
				<sprite x="90" y="0" width="14" height="14" />
			</animation>
			<animation name="Laserbolt" timePerFrame=".05">
				<sprite x="0" y="24" width="10" height="34" />
