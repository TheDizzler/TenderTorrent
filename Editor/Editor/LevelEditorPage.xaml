<Page x:Class="Editor.LevelEditorPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Editor"
      mc:Ignorable="d"
      Title="LevelEditor">

	<DockPanel x:Name="levelDock" LastChildFill="True">
		
		<Label x:Name="levelNameLabel" Content="Level Name" DockPanel.Dock="Top" HorizontalAlignment="Center" VerticalAlignment="Top"/>
		<TreeView x:Name="layerTreeview" DockPanel.Dock="Left"/>
		<ScrollViewer DockPanel.Dock="Right" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
			<Image x:Name="bgImage" />
		</ScrollViewer>
		



	</DockPanel>
</Page>
